{
  "extends": "../tsconfig.json",
  "include": ["src", "vite.config.ts", "index.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
