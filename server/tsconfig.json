{
  "include": ["src/**/*.ts", "tests/**/*.ts", "knexfile.ts", "jest.config.ts"],
  "files": ["src/index.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "build",
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
